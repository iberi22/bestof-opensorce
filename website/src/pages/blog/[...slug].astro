---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  return blogEntries.map(entry => ({
    params: { slug: entry.slug }, props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
const base = import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL : `${import.meta.env.BASE_URL}/`;
---

<Layout title={entry.data.title}>
  <main class="pt-24 pb-12">
    <article class="prose prose-invert prose-lg max-w-4xl mx-auto px-6">
      <div class="flex justify-between items-center mb-8">
        <a href={`${base}blog`} class="inline-flex items-center gap-2 text-sm font-mono text-bone-dark/60 hover:text-bone transition-colors group no-underline">
          <span class="group-hover:-translate-x-1 transition-transform">‚Üê</span> Back to Blog
        </a>
        <!-- Google Translate Widget -->
        <div id="google_translate_element"></div>
        <script type="text/javascript">
          function googleTranslateElementInit() {
            new google.translate.TranslateElement({
              pageLanguage: 'en',
              layout: google.translate.TranslateElement.InlineLayout.SIMPLE,
              autoDisplay: true
            }, 'google_translate_element');
          }
        <script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
      </div>

      <header class="mb-10 text-center">
        <div class="flex justify-center gap-2 mb-4">
          {entry.data.categories?.map(cat => (
            <span class="px-3 py-1 rounded-full bg-white/5 border border-white/10 text-xs font-bold uppercase tracking-wider text-bone-dark/80">
              {cat}
            </span>
          ))}
        </div>
        <h1 class="text-4xl md:text-6xl font-bold text-bone mb-6 tracking-tight">{entry.data.title}</h1>
        {entry.data.description && <p class="text-xl text-bone-dark/60 mb-8">{entry.data.description}</p>}

        <!-- GitHub Link Button -->
        {entry.data.repo && (
          <a href={`https://github.com/${entry.data.repo}`} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 px-6 py-3 bg-[#24292e] hover:bg-[#2f363d] text-white rounded-full transition-colors mb-8 font-medium no-underline">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
            </svg>
            View on GitHub
          </a>
        )}

        {entry.data.images?.screenshot && (
          <div class="rounded-3xl overflow-hidden border border-white/10 mb-12 shadow-2xl shadow-black/50">
            <img src={entry.data.images.screenshot} alt={entry.data.title} class="w-full" />
          </div>
        )}
      </header>

      <!-- Top Contributors Section -->
      {entry.data.insights?.top_contributors && entry.data.insights.top_contributors.length > 0 && (
        <div class="mb-12 p-8 bg-white/5 rounded-3xl border border-white/10">
          <h3 class="text-xl font-bold text-bone mb-6 flex items-center gap-2">
            <span>üë•</span> Top Contributors
          </h3>
          <div class="flex flex-wrap gap-4">
            {entry.data.insights.top_contributors.map((contributor) => (
              <a href={contributor.html_url} target="_blank" rel="noopener noreferrer" class="flex items-center gap-3 bg-black/20 hover:bg-white/10 px-4 py-3 rounded-xl transition-colors group no-underline border border-white/5">
                <img src={contributor.avatar_url} alt={contributor.login} class="w-10 h-10 rounded-full border border-white/10 group-hover:border-emerald-500/50 transition-colors" />
                <div class="flex flex-col">
                  <span class="text-sm font-bold text-bone group-hover:text-emerald-400 transition-colors">{contributor.login}</span>
                  <span class="text-xs text-bone-dark/60">{contributor.contributions} commits</span>
                </div>
              </a>
            ))}
          </div>
        </div>
      )}

      <div class="bg-[#141414] border border-white/5 rounded-3xl p-8 md:p-12 mb-12">
        <Content />
      </div>

      <!-- Tech Ad Banner -->
      <div class="bg-gradient-to-r from-blue-900/20 to-purple-900/20 border border-white/10 rounded-2xl p-6 mb-12 flex items-center justify-between gap-6">
        <div>
          <h3 class="text-lg font-bold text-white mb-2">üöÄ Level Up Your Dev Skills</h3>
          <p class="text-sm text-gray-300 m-0">Master advanced AI engineering and build tools like this one. Join our community of 10,000+ developers.</p>
        </div>
        <a href="#" class="px-6 py-2 bg-white text-black font-bold rounded-full hover:bg-gray-200 transition-colors no-underline text-sm whitespace-nowrap">
          Learn More
        </a>
      </div>

      <!-- Giscus Comments -->
      <div class="mt-16 pt-10 border-t border-white/5">
        <h3 class="text-2xl font-bold text-bone mb-8 flex items-center gap-3">
          <span>üí¨</span> Join the Discussion
        </h3>
        <div class="bg-[#0d1117] rounded-xl p-6 border border-white/10 shadow-inner">
          <script src="https://giscus.app/client.js"
            data-repo="iberi22/bestof-opensource"
            data-repo-id="R_kgDONN1q_A"
            data-category="General"
            data-category-id="DIC_kwDONN1q_M4CkO5p"
            data-mapping="pathname"
            data-strict="0"
            data-reactions-enabled="1"
            data-emit-metadata="0"
            data-input-position="bottom"
            data-theme="dark_dimmed"
            data-lang="en"
            crossorigin="anonymous"
            async>
          </script>
        </div>
      </div>

    </article>
  </main>
</Layout>
